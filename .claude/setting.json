{
  "hooks": {
    "PostToolUse": [
      {
        "name": "inline-change-notes",
        "run": ".claude/hooks/post_edit_summary.py",
        "when": { "tool_name_in": ["Edit", "MultiEdit", "WriteFile"] },
        "timeout_seconds": 10,
        "pass_json_stdin": true
      }
    ]
  },
  "env": {
        "ANTHROPIC_AUTH_TOKEN": "your_zai_api_key",
        "ANTHROPIC_BASE_URL": "https://api.z.ai/api/anthropic",
        "API_TIMEOUT_MS": "3000000"
    }

}

